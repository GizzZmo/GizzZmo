# EditorConfig Template
# Copy this to your project root as .editorconfig
# Helps maintain consistent coding styles across different editors and IDEs

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript, TypeScript, JSX, TSX
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Python files
[*.py]
indent_size = 4

# C/C++ files
[*.{c,cpp,cc,cxx,h,hpp}]
indent_size = 4
indent_style = space

# Java files
[*.java]
indent_size = 4

# C# files
[*.cs]
indent_size = 4

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Rust files
[*.rs]
indent_size = 4

# PHP files
[*.php]
indent_size = 4

# Ruby files
[*.rb]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS, SCSS, SASS files
[*.{css,scss,sass,less}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# SQL files
[*.sql]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

# Configuration files
[*.{ini,cfg,conf,config}]
indent_size = 2

# Package files
[package.json]
indent_size = 2

# Specific project overrides
[*.{vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# PowerShell files
[*.ps1]
end_of_line = crlf
indent_size = 4